{
  "name": "forgeTools",
  "version": "0.0.0-semantically-release",
  "description": "Util functions for my apps",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "commit": "git-cz",
    "coverage": "cat ./coverage/lcov.info | codecov",
    "prebuild": "rimraf -rf ./dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js -p",
    "lint": "eslint src --ignore-pattern *.test.js",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "test:watch": "cross-env NODE_ENV=test mocha --watch",
    "validate": "npm-run-all --parallel lint test build",
    "release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mBourges/forgeTools.git"
  },
  "keywords": [
    "utils",
    "personal"
  ],
  "author": "Matt B <m.bourges@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mBourges/forgeTools/issues"
  },
  "homepage": "https://github.com/mBourges/forgeTools#readme",
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-loader": "6.2.10",
    "babel-plugin-istanbul": "3.1.2",
    "babel-preset-es2015": "6.18.0",
    "chai": "3.5.0",
    "codecov": "1.0.1",
    "commitizen": "2.9.5",
    "cross-env": "3.1.4",
    "cz-conventional-changelog": "1.2.0",
    "eslint": "3.13.1",
    "eslint-config-kentcdodds": "11.1.0",
    "ghooks": "2.0.0",
    "jsonwebtoken": "7.2.1",
    "mocha": "3.2.0",
    "npm-run-all": "4.0.1",
    "nyc": "10.1.2",
    "path": "0.12.7",
    "rimraf": "2.5.4",
    "semantic-release": "^6.3.2",
    "validate-commit-msg": "2.8.2",
    "webpack": "1.14.0"
  },
  "nyc": {
    "check-coverage": true,
    "banches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "instrument": false,
    "sourceMap": false,
    "require": [
      "babel-register"
    ],
    "include": [
      "src"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run validate",
      "commit-msg": "validate-commit-msg"
    }
  },
  "dependencies": {
    "jwt-decode": "2.1.0"
  }
}
